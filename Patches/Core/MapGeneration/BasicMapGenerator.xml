<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationAttributeSet">
		<xpath>*/GenStepDef[defName="RocksFromGrid"]/genStep</xpath>
		<attribute>Class</attribute>
		<value>RimworldApocalypse.GenStep_RocksFromGridRA</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>*/GenStepDef[defName="RocksFromGrid"]</xpath>
		<value>
			<li Class="RimworldApocalypse.GenStepExtension">
				<FlatMineablesPer10kCells>1</FlatMineablesPer10kCells> <!-- Default: 4 -->
				<SmallHillsMineablesPer10kCells>4</SmallHillsMineablesPer10kCells> <!-- Default: 8 -->
				<LargeHillsMineablesPer10kCells>13.75</LargeHillsMineablesPer10kCells> <!-- Default: 11 -->
				<MountainousMineablesPer10kCells>30</MountainousMineablesPer10kCells> <!-- Default: 15 -->
			</li>
		</value>
	</Operation>
</Patch>

